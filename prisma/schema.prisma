generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductSourceType {
  MANUAL
  ALBERT_HEIJN
  HOOGVLIET
  JUMBO
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  groceryItems GroceryItem[]
}

model GroceryItem {
  id           Int            @id @default(autoincrement())
  quantity     Float
  unit         String
  price        Float?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  boughtAt     DateTime?
  boughtFromId Int?
  boughtFrom   ProductSource? @relation(fields: [boughtFromId], references: [id])
  boughtById   Int?
  boughtBy     User?          @relation(fields: [boughtById], references: [id])
  productId    Int
  product      Product        @relation(fields: [productId], references: [id])
}

model Product {
  id           Int                @id @default(autoincrement())
  name         String
  otherNames   String[]
  description  String
  tags         TagsOnProducts[]
  images       ImagesOnProducts[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  sources      ProductSource[]
  groceryItems GroceryItem[]
}

model ProductTag {
  id             Int              @id @default(autoincrement())
  name           String
  TagsOnProducts TagsOnProducts[]
}

model TagsOnProducts {
  productId Int
  tagId     Int
  product   Product    @relation(fields: [productId], references: [id])
  tag       ProductTag @relation(fields: [tagId], references: [id])

  @@id([productId, tagId])
}

model ProductImage {
  id               Int                @id @default(autoincrement())
  url              String
  ImagesOnProducts ImagesOnProducts[]
}

model ImagesOnProducts {
  productId Int
  imageId   Int
  product   Product      @relation(fields: [productId], references: [id])
  image     ProductImage @relation(fields: [imageId], references: [id])

  @@id([productId, imageId])
}

model ProductSource {
  id          Int               @id @default(autoincrement())
  name        String
  url         String
  price       Float?
  type        ProductSourceType
  productId   Int
  product     Product           @relation(fields: [productId], references: [id])
  GroceryItem GroceryItem[]
}
